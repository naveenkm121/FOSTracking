
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:animateLayoutChanges="true"
    android:background="@drawable/login_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">
        <TextView
            android:id="@+id/create_account_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Log In"
            android:textSize="20dp" />
        <LinearLayout
            android:id="@+id/signUp_ly"
            android:layout_below="@+id/create_account_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp">
            <EditText
                android:id="@+id/new_signup_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_marginRight="@dimen/margin_10"
                android:layout_marginTop="@dimen/margin_10"
                android:hint="Email"
                android:singleLine="true"
                android:background="@color/transparent"
                android:paddingLeft="15dp"
                android:paddingBottom="@dimen/edit_text_bottom_padding"
                android:paddingTop="@dimen/padding5"
                android:imeOptions="actionNext"
                android:textColorHint="@color/login_focus_field"
                android:textColor="@color/text_login_color_code"
                android:textCursorDrawable="@drawable/color_cursor"
                android:textSize="@dimen/txtSizeS" />
            <View
                android:id="@+id/new_signup_email_underline"
                android:layout_width="match_parent"
                android:background="@color/login_focus_field"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_marginRight="@dimen/margin_10"
                android:gravity="center_vertical"
                android:layout_height="0.5dp"/>
            <EditText
                android:id="@+id/new_signup_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_marginRight="@dimen/margin_10"
                android:hint="password"
                android:inputType="textPassword"
                android:background="@color/transparent"
                android:singleLine="true"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:imeOptions="actionNext"
                android:paddingTop="@dimen/padding5"
                android:paddingBottom="@dimen/edit_text_bottom_padding"
                android:textColorHint="@color/login_focus_field"
                android:textColor="@color/text_login_color_code"
                android:textCursorDrawable="@drawable/color_cursor"
                android:textSize="@dimen/txtSizeS" />

            <View
                android:id="@+id/new_signup_pass_underline"
                android:layout_width="match_parent"
                android:background="@color/login_focus_field"
                android:layout_marginLeft="@dimen/margin_10"
                android:layout_marginRight="@dimen/margin_10"
                android:gravity="center_vertical"
                android:layout_height="0.5dp"/>


        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="40dp"
            android:layout_below="@+id/signUp_ly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/new_register_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/dark_orange"
                android:gravity="center_horizontal"
                android:padding="@dimen/padding8"
                android:text="Login"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="20sp"
                />
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>